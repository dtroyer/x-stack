# x-stackrc

# ensure we don't re-source this in the same environment
[[ -z "$_DEVSTACK_STACKRC" ]] || return 0
declare -r -g _DEVSTACK_STACKRC=1

BASE_DIR=$(cd $(dirname "${BASH_SOURCE:-$0}") && pwd)
BASE_BIN_DIR=/usr/bin


ADMIN_PASSWORD=0penstack

# Specify region name Region
REGION_NAME=${REGION_NAME:-RegionOne}

SERVICE_HOST=${SERVICE_HOST:-localhost}

# from x-mysql.sh
DATABASE_USER=${DATABASE_USER:-root}
DATABASE_PASSWORD=${DATABASE_PASSWORD:-superstack}
DATABASE_HOST=${DATABASE_HOST:-127.0.0.1}
SERVICE_LISTEN_ADDRESS=${SERVICE_LISTEN_ADDRESS:-0.0.0.0}
BASE_SQL_CONN=${BASE_SQL_CONN:-mysql+pymysql://$DATABASE_USER:$DATABASE_PASSWORD@$DATABASE_HOST}

# from x-rabbitmq.sh
RABBIT_USERID=${RABBIT_USERID:-stackrabbit}
RABBIT_PASSWORD=${RABBIT_PASSWORD:-secretrabbit}
RABBIT_HOST=${RABBIT_HOST:-127.0.0.1}

# from lib/apache
APACHE_NAME=apache2
APACHE_CONF_DIR=${APACHE_CONF_DIR:-/etc/$APACHE_NAME/sites-available}
APACHE_SETTINGS_DIR=${APACHE_SETTINGS_DIR:-/etc/$APACHE_NAME/conf-enabled}

# from lib/keystone
KEYSTONE_AUTH_HOST=${KEYSTONE_AUTH_HOST:-$SERVICE_HOST}
KEYSTONE_AUTH_PORT=${KEYSTONE_AUTH_PORT:-35357}
KEYSTONE_SERVICE_HOST=${KEYSTONE_SERVICE_HOST:-$SERVICE_HOST}
KEYSTONE_SERVICE_PORT=${KEYSTONE_SERVICE_PORT:-5000}
# Set the project for service accounts in Keystone
SERVICE_DOMAIN_NAME=${SERVICE_DOMAIN_NAME:-Default}
SERVICE_PROJECT_NAME=${SERVICE_PROJECT_NAME:-service}
